{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "../../out-tsc/lib",
    "target": "es2015",
    "declaration": true,
    "strict": true,
    "types": [],
    "lib": [
      "dom",
      "es2018"
    ]
  },
  "angularCompilerOptions": {
    "skipTemplateCodegen": true,
    "strictMetadataEmit": false,
    "enableResourceInlining": true,
    "flatModuleOutFile": "joe-store-api",
    "flatModuleId": "joe-store-api"
  },
  "exclude": [
    "src/test.ts",
    "**/*.spec.ts"
  ]
}